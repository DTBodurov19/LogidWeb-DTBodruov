@model List<StockModel>

<!DOCTYPE html>
<html>
<head>
    <title>Stock List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #e2ecf6;
            color: #333;
        }

        h2 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #4285f4;
        }

        .btn {
            display: inline-block;
            padding: 6px 12px;
            margin-bottom: 0;
            font-size: 14px;
            font-weight: 400;
            line-height: 1.42857143;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            cursor: pointer;
            border: 1px solid transparent;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: #4285f4;
            color: #ffffff;
            border-color: #4285f4;
        }

            .btn-primary:hover {
                background-color: #3367d6;
                border-color: #3367d6;
            }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 4px;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }

        th {
            color: #4285f4;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 12px;
            line-height: 1.5;
            border-radius: 3px;
        }

        .btn-primar {
            background-color: #4285f4;
            color: #ffffff;
            border-color: #4285f4;
        }

            .btn-primar:hover {
                background-color: #3367d6;
                border-color: #3367d6;
            }

        .btn-danger {
            background-color: #dc3545;
            color: #ffffff;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #c82333;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>List of Stocks</h2>

        <a class="btn btn-primary btn-sm" href="/Home/StockCreate">New Stock</a>
       

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <table>
            <thead>
                <tr>
                    <th style="color: #4285f4;">ID</th>
                    <th style="color: #4285f4;">Unit price</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StockID</td>
                        <td>@item.Unit_price</td>
                        <td>
                            <a class="btn btn-primar btn-sm" href="/Stocks/Edit?StockID=@item.StockID">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/Stocks/Delete?StockID=@item.StockID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
