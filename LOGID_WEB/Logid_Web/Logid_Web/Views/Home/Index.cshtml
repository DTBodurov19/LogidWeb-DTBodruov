@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Welcome to Logid Web</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f2f7fc;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .display-4 {
            font-size: 36px;
            margin-bottom: 20px;
            color: #4285f4;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            background-color: #4285f4;
            color: #ffffff;
            border: none;
            border-radius: 4px;
            transition: background-color 0.3s;
            cursor: pointer;
            margin-right: 10px;
        }

            .btn:hover {
                background-color: #3367d6;
            }

    </style>
</head>
<body>
    <div class="container">
        <h1 class="display-4">Welcome to Logid Web</h1>
       
    </div>
</body>
</html>
